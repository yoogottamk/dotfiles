[global]
    font = JetBrainsMono Nerd Font 14

    markup=full
    # The format of the message. Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "<b>%a:</b> %s\n%b"

    sort = yes

    indicate_hidden = yes
    alignment = left
    show_age_threshold = 60

    word_wrap = yes
    ignore_newline = no
    # 35: polybar height
    width = 400
    height = 300
    offset = 0x35
    # offset = 0x0
    origin = bottom-right
    transparency = 0

    idle_threshold = 60
    monitor = 0
    follow = keyboard
    sticky_history = yes

    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8

    # Define a color for the separator.
    # possible values are:
    #  * auto: dunst tries to find a color fitting to the background
    #  * foreground: use the same color as the foreground
    #  * frame: use the same color as the frame.
    #  * anything else will be interpreted as a X color
    separator_color = auto

    # dmenu path
    dmenu = /usr/bin/rofi -dmenu -p dunst:

    browser = /usr/bin/firefox -new-tab

    icon_position = left
    max_icon_size = 100

    icon_path = /usr/share/icons/Papirus-Dark/16x16/status:/usr/share/icons/Papirus-Dark/16x16/devices/:/usr/share/icons/Papirus-Dark/16x16/apps/:/usr/share/icons/Papirus-Dark/16x16/actions

    frame_width = 0
    frame_color = "#000000"

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10s

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 15s

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    timeout = 0s

[ignore_teams]
    appname = "Microsoft Teams - Preview"
    skip_display = true

# vim:ft=cfg
