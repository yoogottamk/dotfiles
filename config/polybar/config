[module/date]
type = internal/date
interval = 1

format = <label>
format-underline = #b58900

date =
date-alt = "%a %d/%m/%Y "
time = %H:%M:%S
time-alt = %H:%M:%S

label = %date%%time%

[default-config/player]
type = custom/script
format-underline = #2aa198
interval = 1

[module/cmus]
inherit = default-config/player

exec = cmus-polybar
exec-if = pgrep -x cmus

label = %output:0:37:...%
format = %{A1:cmus-polybar -p:}ïŠ%{A} <label> %{A1:cmus-polybar -n:}ï%{A}
click-left = cmus-polybar -u

[module/ytmusic]
inherit = default-config/player

exec = ytmusic
exec-if = ytmusic -c && pgrep -f firefox

label = %output:0:37:...%
format = %{A1:ytmusic -p:}ïŠ%{A} <label> %{A1:ytmusic -n:}ï%{A}
click-left = ytmusic -t

[module/spotify]
inherit = default-config/player

exec = spotifyc -f "{{ icon }} {{ artist }}: {{ title }}" -i "ïŠŒ" "ï…„" -o
exec-if = pgrep -x spotify

label = %output:0:37:...%
format = %{A1:spotifyc -p:}ïŠ%{A} <label> %{A1:spotifyc -n:}ï%{A}

click-left = spotifyc -c
click-right = spotifyc -v t
scroll-up = spotifyc -v '-5'
scroll-down = spotifyc -v '+5'

